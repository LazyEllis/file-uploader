<% if (data.id) { %>
  <nav aria-label="breadcrumb">
    <ol class="breadcrumb-list">
      <% if (!data[identifier]) { %>
        <li><a href="/">My Drive</a></li>
      <% } else if (!data[identifier].parentId) { %>
        <li><a href="/">My Drive</a></li>
        <li>
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
            class="lucide lucide-chevron-right-icon lucide-chevron-right"
          >
            <path d="m9 18 6-6-6-6" />
          </svg>
          <a href="/folders/<%= data[identifier].id %>"><%= data[identifier].name %></a>
        </li>
      <% } else { %>
        <li><a href="/">My Drive</a></li>
        <li>
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
            class="lucide lucide-chevron-right-icon lucide-chevron-right"
          >
            <path d="m9 18 6-6-6-6" />
          </svg>
          &hellip;
        </li>
        <li>
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
            class="lucide lucide-chevron-right-icon lucide-chevron-right"
          >
            <path d="m9 18 6-6-6-6" />
          </svg>
          <a href="/folders/<%= data[identifier].id %>"><%= data[identifier].name %></a>
        </li>
      <% } %>
    </ol>
  </nav>
<% } %>